<h1>Login</h1>

<%= form_with(model: @user) do |f| %>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="submit">
    <%= f.submit :登入 %>
  </div>
  
<% end %>

<%= link_to 'Back', users_path %>